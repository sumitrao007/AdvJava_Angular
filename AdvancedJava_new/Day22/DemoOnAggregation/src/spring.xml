<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="address" class="com.hefshine.bean.Address">
		<property name="area" value="ArjunNagar"/>
		<property name="city" value="Raisen"/>
		<property name="pin" value="464551"/>
	</bean>
	
	<bean id="student" class="com.hefshine.bean.Student">
		<property name="name" value="Pankaj"/>
		<property name="mobileno" value="9893054089"/>
		<property name="address" ref="address"/>
	
	</bean>



</beans>